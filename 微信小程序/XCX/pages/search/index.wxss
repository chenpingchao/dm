  display: flex;
  flex-direction:column;
  margin-left: 2rpx 0 2rpx 40rpx ;
  
}
.price-asc,.saled-asc{
  margin-top:2rpx;
  border-bottom:20rpx solid #000;
  border-left:20rpx solid transparent;
  border-right:20rpx solid transparent;
}
