/* pages/cart/index.wxss */
.active{
  border:2rpx solid #444;
  border-radius: 100rpx;
}
.cart_list{
  position: relative;
  display: flex;
  align-items: center;
  padding: 10rpx 0;
  border-bottom:2rpx solid #666;
}
.icon{
  margin:0 15rpx;
}
.image{
  width: 250rpx;
  height:250rpx;
  margin-right:40rpx;
}
.menu_name{
  font-size: 50rpx;
}
.price{
  margin:30rpx 0 ;
  font-size:50rpx;
  color:#f00;
}
.buynum_box{
  width:150rpx;
  height:50rpx;
  border:1rpx solid #555;
  border-radius: 6rpx;
  position: absolute;
  right: 40rpx;
  bottom:30rpx;
  display: flex;
}
.buynum{
  border-right: 1rpx solid #555;
  border-left: 1rpx solid #555;
  flex-grow: 1;
  text-align:center;
}
.buynum_change{
    flex-grow: 1;
    text-align:center;
}
.bottom{
  width:100%;
  height:100rpx;
  position: fixed;
  bottom:0;
  border-top:1rpx solid #555;
  display: flex;
}
.all{
  height:100%;
  text-align: center;
  line-height: 100rpx;
}
.icon_all{
  width:20%;
}
.allprice{
  width:50%;
  text-align: right;
  padding-right:30rpx;
}
.buy{
  width:30%;
  background: #f00;
  color:#fff;
}
.money{
  color:#f00;
}


